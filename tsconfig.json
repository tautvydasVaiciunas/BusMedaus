{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
